@model WebApplication3.Models.TUser

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Registration</title>
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style.css">
</head>
<body>

    <div class="container">
        <h4>Register</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Registration">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Username" class="control-label">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoaiUser" class="control-label"></label>
                        <input asp-for="LoaiUser" class="form-control" />
                        <span asp-validation-for="LoaiUser" class="text-danger"></span>
                        <p>Admin = 1</p>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Login" asp-controller="Access" class="btn btn-link">Back to List</a>
        </div>
    </div>

</body>
</html>
